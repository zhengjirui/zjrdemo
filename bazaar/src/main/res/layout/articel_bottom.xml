    <com.zhy.autolayout.AutoLinearLayout

        android:layout_width="750px"
        android:layout_height="100px"
        android:background="@color/txt_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="55px"
            android:layout_weight="1"
            android:src="@mipmap/article_back_icon"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_fav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="55px"
                android:layout_height="55px"
                android:src="@mipmap/article_fav_normal_icon"/>

            <TextView
                android:id="@+id/tv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="55px"
                android:layout_height="55px"
                android:src="@mipmap/article_comment_normal_icon"/>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/iv_resend"
            android:layout_width="0dp"
            android:layout_height="55px"
            android:layout_weight="1"
            android:src="@mipmap/article_resend_icon"/>
    </com.zhy.autolayout.AutoLinearLayout>

