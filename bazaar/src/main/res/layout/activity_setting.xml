<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/activity_setting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metshow.bz.module.me.activity.SettingActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="30px"
            android:paddingTop="30px">

            <TextView
                android:id="@+id/tv_clear_cache"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="56px"
                android:text="清除缓存"
                android:textColor="#3B3B48"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_cache_size"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:text="0.00M"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_appstore"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:layout_marginTop="20px"
            android:background="@android:color/white"
            android:paddingBottom="30px"
            android:paddingLeft="56px"
            android:paddingTop="30px"
            android:text="给个好评"
            android:textColor="#3B3B48"
            android:textSize="26px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>

        <TextView
            android:id="@+id/tv_user_feedback"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@android:color/white"
            android:paddingBottom="30px"
            android:paddingLeft="56px"
            android:paddingTop="30px"
            android:text="用户反馈"
            android:textColor="#3B3B48" android:textSize="26px"/>

        <View

            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@android:color/white"
            android:paddingBottom="30px"
            android:paddingLeft="56px"
            android:paddingTop="30px"
            android:text="关于我们"
            android:textColor="#3B3B48" android:textSize="26px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_add_contact"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@android:color/white"
            android:paddingBottom="30px"
            android:paddingLeft="56px"
            android:paddingTop="30px"
            android:text="导入通讯录"
            android:textColor="#3B3B48" android:textSize="26px"/>
        <View
            android:id="@+id/line_add_contact"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_get_state"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="95px"
                android:layout_weight="1"
                android:paddingBottom="30px"
                android:paddingLeft="56px"
                android:paddingTop="30px"
                android:text="接收动态通知"
                android:textColor="#3B3B48"
                android:textSize="26px"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                app:kswTintColor="@color/redWin"/>
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:layout_marginTop="20px"
            android:background="@android:color/white"
            android:paddingBottom="30px"
            android:paddingLeft="56px"
            android:paddingTop="30px"
            android:text="修改密码"
            android:textColor="#3B3B48"
            android:textSize="26px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@android:color/white"
            android:paddingBottom="30px"
            android:paddingLeft="56px"
            android:paddingTop="30px"
            android:text="退出登录"
            android:textColor="#3B3B48"
            android:textSize="26px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"/>


    </com.zhy.autolayout.AutoLinearLayout>

</android.support.v4.widget.NestedScrollView>

