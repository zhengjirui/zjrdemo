<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:baselineAlignBottom="true"
            android:padding="10dp"
            android:src="@mipmap/title_back_icon"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="280px"
        android:layout_height="280px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48px"
        android:layout_marginTop="48px"
        android:src="@mipmap/bazaar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="手机账号"
                android:textColor="@color/txt_white"
                android:textSize="24px"/>

            <View

                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:background="@color/txt_white"/>

            <TextView
                android:id="@+id/tv_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="邮箱账号"
                android:textColor="#dd6b81"
                android:textSize="24px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_86"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+86"
                android:textColor="@color/txt_white"
                android:textSize="35px"/>

            <View
                android:id="@+id/v_divide"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="44px"
                android:layout_marginRight="18px"
                android:background="@color/txt_white"/>

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/txt_white"
                android:textColorHint="@color/txt_white"/>
        </com.zhy.autolayout.AutoLinearLayout>


        <View
            android:layout_width="600px"
            android:layout_height="2px"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>




        <TextView
            android:id="@+id/tv_get"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52px"
            android:background="@drawable/shape_reg_btn_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@color/txt_white"
            android:textSize="30px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="495px"
        android:layout_height="78px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400px"
        android:gravity="center"
        android:text="在您申请注册BAZAAR IN用户时,\n
即视为您不仅完全同意BAZAAR IN使用须知,\n
而且知悉且同意本注册用户特别须知。"
        android:textColor="@color/txt_white"
        android:textSize="22px"/>

</com.zhy.autolayout.AutoLinearLayout>
