<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoFrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10px">


    <com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/txt_white"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="2px"
            app:cardUseCompatPadding="false">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="match_parent"
                    android:layout_height="567px"
                    android:scaleType="centerInside"
                    android:src="@mipmap/item_default"/>

                <com.zhy.autolayout.AutoFrameLayout
                    android:id="@+id/al_imgsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center"
                        android:src="@mipmap/num_noto"/>

                    <TextView
                        android:id="@+id/tv_imgszie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/txt_white"
                        android:textSize="30px"/>


                </com.zhy.autolayout.AutoFrameLayout>


            </com.zhy.autolayout.AutoFrameLayout>

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="10dp"
            android:text="test kwan"
            android:textColor="#3B3B48"
            android:textSize="24px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.zhy.autolayout.AutoFrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <!--<ImageView-->
                    <!--android:id="@+id/iv_avatar_bg"-->
                    <!--android:layout_width="50px"-->
                    <!--android:layout_height="50px"-->
                    <!--android:src="@mipmap/avator_bg"/>-->

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:layout_gravity="center"/>

                </com.zhy.autolayout.AutoFrameLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="this is name"
                    android:textColor="#3B3B48"
                    android:textSize="26px"/>

                <ImageView
                    android:id="@+id/iv_isVip"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/vip_icon"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_fav"
                    android:layout_width="36px"
                    android:layout_height="36px"/>

                <TextView
                    android:id="@+id/tv_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4px"
                    android:text="3"
                    android:textSize="24px"
                    android:visibility="gone"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pl"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/article_comment_normal_icon"/>

                <TextView
                    android:id="@+id/tv_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4px"
                    android:text="2"
                    android:textSize="24px"
                    android:visibility="gone"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoFrameLayout>