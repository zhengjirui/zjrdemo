<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/ll_user_detail_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/txt_white"
    android:orientation="horizontal"
    android:padding="50px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50px">

        <com.kwan.base.widget.CircularImage
            android:id="@+id/iv_avatar"
            android:layout_width="145px"
            android:layout_height="145px"
            android:layout_centerInParent="true"
            android:src="@mipmap/default_user_icon"/>

        <com.kwan.base.widget.CircularImage
            android:id="@+id/iv_isVip"
            android:layout_width="155px"
            android:layout_height="155px"
            android:layout_gravity="center"
            android:src="@mipmap/icon_vip"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="#3B3B48"
                android:textSize="32px"/>



            <!--<ImageView-->
            <!--android:layout_width="30px"-->
            <!--android:layout_height="30px"-->
            <!--android:layout_marginLeft="10px"-->
            <!--android:src="@mipmap/user_vip_icon"/>-->
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView

            android:id="@+id/tv_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="积分1111"
            android:textColor="#B2B2B2"
            android:textSize="24px"/>

        <TextView
            android:layout_marginTop="20px"
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="用户名"
            android:textColor="#3B3B48"
            android:textSize="24px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_gravity="center"
        android:src="@mipmap/icon_next"/>

</com.zhy.autolayout.AutoLinearLayout>