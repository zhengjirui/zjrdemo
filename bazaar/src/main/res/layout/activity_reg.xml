<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:baselineAlignBottom="true"
            android:padding="10dp"
            android:src="@mipmap/title_back_icon"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="280px"
        android:layout_height="280px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48px"
        android:layout_marginTop="48px"
        android:src="@mipmap/bazaar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:textSize="30px"
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_white"/>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31px"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入验证码"
                    android:textColor="@color/txt_white"
                    android:textColorHint="@color/txt_white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_add_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="重发验证码"
                android:textColor="@color/txt_white"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="密码"
                android:textColor="@color/txt_white"
                android:textSize="35px"/>

            <View
                android:id="@+id/v_divide"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="44px"
                android:layout_marginRight="18px"
                android:background="@color/txt_white"/>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入密码"
                android:textColor="@color/txt_white"
                android:textColorHint="@color/txt_white"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:id="@+id/line_pwd"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>


        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52px"
            android:background="@drawable/shape_reg_btn_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="注册"
            android:textColor="@color/txt_white"
            android:textSize="30px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="在您申请注册BAZAAR IN用户时,\n
即视为您不仅完全同意BAZAAR IN使用须知,\n
而且知悉且同意本注册用户特别须知。"
        android:textColor="@color/txt_white"
        android:textSize="22px"/>

</com.zhy.autolayout.AutoLinearLayout>

