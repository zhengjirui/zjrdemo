<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white"
    android:orientation="vertical"
    tools:context="com.metshow.bz.module.message.MessageActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_follow"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:src="@mipmap/icon_message_follow"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新的关注"
            android:textColor="#3B3B48"
            android:textSize="26px"/>
        
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_newfollow"
            android:background="@mipmap/red_dot"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:layout_width="50px"
            android:layout_height="50px"/>

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="60px"
            android:src="@mipmap/icon_next"/>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:src="@mipmap/article_comment_normal_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="评论我的"
            android:textColor="#3B3B48"
            android:textSize="26px"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_newcomment"
            android:background="@mipmap/red_dot"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:layout_width="50px"
            android:layout_height="50px"/>

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="60px"
            android:src="@mipmap/icon_next"/>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:id="@+id/ll_fav"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:src="@mipmap/article_fav_normal_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="被喜欢的"
            android:textColor="#3B3B48"
            android:textSize="26px"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_newfav"
            android:background="@mipmap/red_dot"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:layout_width="50px"
            android:layout_height="50px"/>

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="60px"
            android:src="@mipmap/icon_next"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:id="@+id/ll_chat"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:src="@mipmap/icon_message_chat"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="聊天"
            android:textColor="#3B3B48"
            android:textSize="26px"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_newchat"
            android:background="@mipmap/red_dot"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:layout_width="50px"
            android:layout_height="50px"/>

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="60px"
            android:src="@mipmap/icon_next"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:id="@+id/ll_notice"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="30px"
            android:src="@mipmap/icon_message_notice"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="通知"
            android:textColor="#3B3B48"
            android:textSize="26px"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_newnotice"
            android:background="@mipmap/red_dot"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:layout_width="50px"
            android:layout_height="50px"/>

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="60px"
            android:src="@mipmap/icon_next"/>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

</com.zhy.autolayout.AutoLinearLayout>
