<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_close"
            android:layout_width="120px"
            android:layout_height="120px"
            android:baselineAlignBottom="true"
            android:padding="10dp"
            android:src="@mipmap/title_close_icon"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="280px"
        android:layout_height="280px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48px"
        android:layout_marginTop="48px"
        android:src="@mipmap/bazaar"/>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="账号"
            android:inputType="text"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            android:textSize="30px"/>

        <View
            android:layout_width="600px"
            android:layout_height="2px"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:background="@null"
            android:gravity="center"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            android:textSize="30px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_forgot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="忘记密码"
                android:textColor="@color/txt_white"
                android:textSize="24px"
            />

            <TextView
                android:id="@+id/tv_reg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="快速注册"
                android:textColor="@color/txt_white"
                android:textSize="24px"/>


        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_marginTop="54px"
            android:background="@drawable/shape_reg_btn_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/txt_white"
            android:textSize="30px"/>


    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_social_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57px"
        android:gravity="center"
        android:text="用社交账号登录"
        android:textColor="@color/txt_white"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginLeft="162px"
            android:src="@mipmap/login_qq"/>

        <ImageView
            android:id="@+id/iv_wb"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginLeft="78px"
            android:layout_marginRight="78px"
            android:src="@mipmap/login_wb"/>

        <ImageView
            android:id="@+id/iv_wx"
            android:layout_width="90px"
            android:layout_height="90px"

            android:src="@mipmap/login_wx"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="495px"
        android:layout_height="78px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="53px"
        android:layout_marginTop="53px"
        android:gravity="center"
        android:text="在您申请注册BAZAAR IN用户时,\n
即视为您不仅完全同意BAZAAR IN使用须知,\n
而且知悉且同意本注册用户特别须知。"
        android:textColor="@color/txt_white"
        android:textSize="22px"/>

</com.zhy.autolayout.AutoLinearLayout>
