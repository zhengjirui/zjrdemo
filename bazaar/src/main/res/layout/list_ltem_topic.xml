<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<ImageView-->
            <!--android:id="@+id/iv_avatar_bg"-->
            <!--android:layout_width="105px"-->
            <!--android:layout_height="105px"-->
            <!--android:src="@mipmap/avator_bg"/>-->

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="62px"
                android:layout_height="62px"
                android:layout_gravity="center"
                android:src="@mipmap/title_user_icon"/>

        </com.zhy.autolayout.AutoFrameLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="name"/>

        <ImageView
            android:id="@+id/iv_isVip"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/vip_icon"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@drawable/shape_rank_bg"
                android:paddingBottom="5px"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:paddingTop="5px"
                android:text="rank"
                android:textColor="@color/txt_white"
                android:textSize="20px"
                android:visibility="gone"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="45px"
            android:layout_height="10px"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_user_menu"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="750px"
            android:layout_height="750px"
            android:src="@mipmap/item_default"/>

    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
    >

        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="85px"
            android:layout_height="85px"
            android:padding="15px"
            android:src="@mipmap/article_fav_icon"/>

        <ImageView
            android:id="@+id/iv_pl"
            android:layout_width="85px"
            android:layout_height="85px"
            android:padding="15px"
            android:src="@mipmap/article_comment_normal_icon"/>

        <ImageView
            android:padding="15px"
            android:id="@+id/iv_share"
            android:layout_width="85px"
            android:layout_height="85px"
            android:src="@mipmap/icon_me_share"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#969696"
            android:textSize="22px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="几个喜欢"
            android:textColor="#969696"
            android:textSize="24px"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:padding="10dp"
            android:text="几个评论"
            android:textColor="#969696"
            android:textSize="24px"/>

        <!--<com.kwan.base.widget.FlowLayout-->
            <!--android:id="@+id/fl_fav"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="10dp"/>-->

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D5D5DB"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="10dp"
        android:textColor="#595968"
        android:textSize="28px"/>

    <com.kwan.base.widget.FlowLayout
        android:id="@+id/fl_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"/>

</com.zhy.autolayout.AutoLinearLayout>