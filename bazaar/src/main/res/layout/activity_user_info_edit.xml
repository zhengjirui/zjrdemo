<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/activity_user_info_edit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.metshow.bz.module.me.activity.UserInfoEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:background="@android:color/white">

        <com.kwan.base.widget.CircularImage
            android:id="@+id/iv_avatar"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@mipmap/default_user_icon"/>
    </RelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10px"
            android:text="基本信息"
            android:textColor="@color/txt_cobalt_blue"/>

        <TextView
            android:id="@+id/tv_shouhuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10px"
            android:text="收货信息"
            android:textColor="@color/gray"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_base"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--昵称-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="20px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingLeft="38px">

            <TextView
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textColor="#969696"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="用户名"
                android:textColor="#3B3B48"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>
        <!--生日-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingLeft="38px">

            <TextView
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="生日"
                android:textColor="#969696"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="1990-1-1"
                android:textColor="#3B3B48"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>
        <!--地区-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingLeft="38px">

            <TextView
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="地区"
                android:textColor="#969696"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="北京市"
                android:textColor="#3B3B48"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>
        <!--手机-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingLeft="38px">

            <TextView
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="绑定手机"
                android:textColor="#969696"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="13487570507"
                android:textColor="#3B3B48"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <!--个人介绍-->

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginTop="20px"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingLeft="38px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="top|left"
                android:text="个人介绍"
                android:textColor="#969696"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10px"
                android:gravity="top|left"
                android:text="宇宙大魔王"
                android:textColor="#3B3B48"/>


        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_shouhuo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--昵称-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="20px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingLeft="38px">

            <TextView
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="#969696"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_real_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#3B3B48"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>
        <!--生日-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingLeft="38px">

            <TextView
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机"
                android:textColor="#969696"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_mobilephone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="#3B3B48"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginTop="20px"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingLeft="38px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="top|left"
                android:text="地址"
                android:textColor="#969696"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10px"
                android:gravity="top|left"
                android:textColor="#3B3B48"/>


        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
