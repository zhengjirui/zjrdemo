<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.metshow.bz.module.point.activity.PointProductActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="376px"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="24px"
                android:layout_marginTop="38px"
                android:textSize="38px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="26px"
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12px"
                    android:textColor="@color/redWin"
                    android:textSize="30px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24px"
                    android:text="积分"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="26px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="44px"
                    android:text="运费:包邮"
                    android:textSize="26px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.tencent.smtt.sdk.WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="10px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="10px"
                    android:background="@color/redWin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收货信息:"
                    android:textSize="30px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="30px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/txt_cobalt_blue"
                    android:textSize="32px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="70px"
                    android:text="姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_name"
                    android:textColor="@color/txt_cobalt_blue"
                    android:paddingLeft="10px"
                    android:layout_marginRight="50px"
                    android:padding="5px"
                    android:background="@drawable/shape__blue_gray_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="36px"
                android:layout_marginBottom="36px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/txt_cobalt_blue"
                    android:textSize="32px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="70px"
                    android:text="地址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_address"
                    android:textColor="@color/txt_cobalt_blue"
                    android:paddingLeft="10px"
                    android:layout_marginRight="50px"
                    android:padding="5px"
                    android:background="@drawable/shape__blue_gray_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/txt_cobalt_blue"
                    android:textSize="32px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="70px"
                    android:text="手机"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:textColor="@color/txt_cobalt_blue"
                    android:paddingLeft="10px"
                    android:layout_marginRight="50px"
                    android:padding="5px"
                    android:background="@drawable/shape__blue_gray_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_margin="30px"
        android:textSize="38px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:text="立即兑换"/>


</com.zhy.autolayout.AutoLinearLayout>
